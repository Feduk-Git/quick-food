<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_cl__order_details_dish_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/elevation_bg"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image_iv__order_details_dish_item"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <TextView
            android:id="@+id/item_name__order_details_dish_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:maxLines="2"
            android:text="Margherita Regular 12x12”"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_image_iv__order_details_dish_item"
            app:layout_constraintTop_toTopOf="@id/item_image_iv__order_details_dish_item" />

        <TextView
            android:id="@+id/item_desc__order_details_dish_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:maxLines="3"
            android:text="Sausage, Mushrooms, Olives, Pepperoni, Green Peppers, Onions"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/item_name__order_details_dish_item"
            app:layout_constraintStart_toStartOf="@+id/item_name__order_details_dish_item"
            app:layout_constraintTop_toBottomOf="@+id/item_name__order_details_dish_item" />

        <TextView
            android:id="@+id/count_title__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_regular"
            android:text="Count:"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/item_desc__order_details_dish_item"
            app:layout_constraintTop_toBottomOf="@+id/item_desc__order_details_dish_item" />

        <TextView
            android:id="@+id/count_tv__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/inter_regular"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/count_title__order_details_dish_item"
            app:layout_constraintStart_toEndOf="@+id/count_title__order_details_dish_item"
            app:layout_constraintTop_toTopOf="@+id/count_title__order_details_dish_item" />

        <TextView
            android:id="@+id/item_price_symb_tv__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter_regular"
            android:text="x  $"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/count_tv__order_details_dish_item"
            app:layout_constraintStart_toEndOf="@+id/count_tv__order_details_dish_item"
            app:layout_constraintTop_toTopOf="@+id/count_tv__order_details_dish_item" />

        <TextView
            android:id="@+id/item_price_tv__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/inter_regular"
            android:text="15.99"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_price_symb_tv__order_details_dish_item"
            app:layout_constraintStart_toEndOf="@+id/item_price_symb_tv__order_details_dish_item"
            app:layout_constraintTop_toTopOf="@+id/item_price_symb_tv__order_details_dish_item" />

        <TextView
            android:id="@+id/total_price_symb_tv__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/inter_bold"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/total_price_tv__order_details_dish_item"
            app:layout_constraintEnd_toStartOf="@+id/total_price_tv__order_details_dish_item"
            app:layout_constraintTop_toTopOf="@+id/total_price_tv__order_details_dish_item" />

        <TextView
            android:id="@+id/total_price_tv__order_details_dish_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="47,97"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_desc__order_details_dish_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>