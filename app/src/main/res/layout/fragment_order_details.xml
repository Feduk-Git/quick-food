<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/order_data_cv__order_details_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/name_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="ABOBA BAOBAB"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/name_label_tv__order_details_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/name_label_tv__order_details_fragment"
                app:layout_constraintStart_toEndOf="@+id/name_label_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/name_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/address_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Address:"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_tv__order_details_fragment" />

            <TextView
                android:id="@+id/address_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Test addres"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/address_label_tv__order_details_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/address_label_tv__order_details_fragment"
                app:layout_constraintStart_toEndOf="@+id/address_label_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/address_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/phone_number_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Phone:"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_tv__order_details_fragment" />

            <TextView
                android:id="@+id/phone_number_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="+380963831721"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/phone_number_label_tv__order_details_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/phone_number_label_tv__order_details_fragment"
                app:layout_constraintStart_toEndOf="@+id/phone_number_label_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/phone_number_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/date_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Date and Time:"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_tv__order_details_fragment" />

            <TextView
                android:id="@+id/date_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="23:23 13.13.2023"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/date_label_tv__order_details_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/date_label_tv__order_details_fragment"
                app:layout_constraintStart_toEndOf="@+id/date_label_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/date_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/status_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Status:"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_tv__order_details_fragment" />

            <TextView
                android:id="@+id/status_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Waiting confirm..."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/status_label_tv__order_details_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/status_label_tv__order_details_fragment"
                app:layout_constraintStart_toEndOf="@+id/status_label_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/status_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/description_label_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Description:"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status_tv__order_details_fragment" />

            <TextView
                android:id="@+id/description_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="TEst description TEst test test description TEst description TEst"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_label_tv__order_details_fragment" />

            <TextView
                android:id="@+id/price_symb_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/inter_bold"
                android:text="$"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/price_tv__order_details_fragment"
                app:layout_constraintEnd_toStartOf="@+id/price_tv__order_details_fragment"
                app:layout_constraintTop_toTopOf="@+id/price_tv__order_details_fragment" />

            <TextView
                android:id="@+id/price_tv__order_details_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="150.12"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_tv__order_details_fragment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishes_list_rv__order_details_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_data_cv__order_details_fragment"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>