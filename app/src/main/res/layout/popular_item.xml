<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_cl__popular_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_image__popular_item"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedImageView"/>

    <TextView
        android:id="@+id/item_name__popular_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_image__popular_item"
        app:layout_constraintStart_toStartOf="@+id/item_image__popular_item"
        app:layout_constraintEnd_toEndOf="@+id/item_image__popular_item"
        android:layout_marginTop="8dp"
        android:text="Pastries"
        android:fontFamily="@font/inter_bold"
        android:textSize="14dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>